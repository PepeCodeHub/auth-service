{
  "name": "auth-service",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "prepare": "husky install",
    "db:migrate:make": "NODE_OPTIONS='--loader ts-node/esm' knex migrate:make --knexfile ./src/config/knexfile.ts -x ts",
    "db:seed:make": "NODE_OPTIONS='--loader ts-node/esm' knex seed:make --knexfile ./src/config/knexfile.ts -x ts",
    "db:migrate": "NODE_OPTIONS='--loader ts-node/esm' knex migrate:latest --knexfile ./src/config/knexfile.ts",
    "db:rollback": "NODE_OPTIONS='--loader ts-node/esm' knex migrate:rollback",
    "db:seed": "NODE_OPTIONS='--loader ts-node/esm' knex seed:run --knexfile ./src/config/knexfile.ts",
    "db:reset": "NODE_OPTIONS='--loader ts-node/esm' knex migrate:rollback && knex migrate:latest && knex seed:run"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.13.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8.17.0"
  },
  "peerDependencies": {
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "knex": "^3.1.0",
    "pg": "^8.13.1",
    "ts-node": "^10.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}